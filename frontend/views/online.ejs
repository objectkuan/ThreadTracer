</head>

    <%- include navi.ejs %>

    <!-- Page Content -->
    <div class="container">

        <!-- Page Heading/Breadcrumbs -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Realtime Monitor</h1>
            </div>
        </div>
        <!-- /.row -->

        <!-- Content Row -->
        <div class="row">

            <!-- Blog Post Content Column -->
            <div class="col-lg-12">

                <!-- Thread States -->
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Thread states</h3>
                    </div>
                    <div class="panel-body">
                        <div style="width: 100%; height: 600px; margin: 1px; padding 1px; border:1px solid #d3d3d3; overflow: auto;">
                            <canvas id="myCanvas" width="6000" height="2400">
                                Your browser does not support the HTML5 canvas tag.
                            </canvas>
                            <canvas id="backupCanvas" width="6000" height="2400" style="display: none;">
                                Your browser does not support the HTML5 canvas tag.
                            </canvas>
                            <script>
                                drawText(102, 202, 100, "Not tracing yet...", "grey");
                                drawText(100, 200, 100, "Not tracing yet...", "#aaa");
                            </script>
                        </div>
                    </div>
                </div>
                
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">
                            <a class="accordion-toggle" data-toggle="collapse" href="#collapseRunACommand" aria-expanded="true"> Run a command </a>
                        </h3>
                    </div>
                    <div id="collapseRunACommand" class="panel-collapse collapse in" aria-expanded="true">
                        <div class="panel-body">
                            <div class="input-group">
                                <input id="run-command" type="text" class="form-control">
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="button" onclick="runCommand();"><i class="fa fa-arrow-right"></i></button>
                                </span>
                            </div>
                            <br>
                            Output:
                            <div id="command-output" class="panel" style="height: 200px; border: 1px solid #d3d3d3; overflow:hidden; padding: 5px;"></div>
                        </div>
                    </div>
                </div>

                <!-- Thread States -->
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">
                            <a class="accordion-toggle" data-toggle="collapse" href="#collapseProcessTree" aria-expanded="true"> Process tree </a>
                        </h3>
                    </div>
                    <div id="collapseProcessTree" class="panel-collapse collapse" aria-expanded="true">
                        <div class="panel-body">
                            <textarea class="form-control" style="height: 400px; resize: none;"></textarea>
                        </div>
                    </div>
                </div>
            </div>

