<%- include header.ejs %>

    <!-- jQuery -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>


    <link href="css/checklist.css" rel="stylesheet"/>
    <link href="css/online.css" rel="stylesheet"/>
    <script src="js/canvas/base.js"></script>
    <script src="js/canvas/thread.js"></script>
    <script src="js/canvas/runsomething.js"></script>
    <script src="js/online.js"></script>
